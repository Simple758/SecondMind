# DeepSeek API
DEEPSEEK_API_KEY=sk-7b612eea1b494352a21e9065043845bc
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat    # or deepseek-reasoner when you need heavy planning

# GitHub repo
REPO_FULL=Simple758/SecondMind
CI_WORKFLOW_NAME=Android APK

# --- PLAN SCHEMA (strict JSON the planner must follow) ---
cat > config/agent/plan-schema.json <<'EOF'
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SecondMind Ops Plan",
  "type": "object",
  "required": ["version", "steps"],
  "properties": {
    "version": { "type": "string", "const": "1.0" },
    "notes": { "type": "string" },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["op", "file"],
        "properties": {
          "op": {
            "type": "string",
            "enum": ["open", "insert", "replace", "ensure_import", "move_block"]
          },
          "file": { "type": "string" },
          "after": { "type": "string" },
          "before": { "type": "string" },
          "at_line": { "type": "integer", "minimum": 1 },
          "pattern": { "type": "string" },
          "with": { "type": "string" },
          "text": { "type": "string" },
          "guard": { "type": "string" },
          "import": { "type": "string" },
          "block_start": { "type": "string" },
          "block_end": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
