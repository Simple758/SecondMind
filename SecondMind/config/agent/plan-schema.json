{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SecondMind Ops Plan",
  "type": "object",
  "required": ["version", "steps"],
  "properties": {
    "version": { "type": "string", "const": "1.0" },
    "notes": { "type": "string" },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["op", "file"],
        "properties": {
          "op": {
            "type": "string",
            "enum": ["open", "insert", "replace", "ensure_import", "move_block"]
          },
          "file": { "type": "string" },
          "after": { "type": "string" },
          "before": { "type": "string" },
          "at_line": { "type": "integer", "minimum": 1 },
          "pattern": { "type": "string" },
          "with": { "type": "string" },
          "text": { "type": "string" },
          "guard": { "type": "string" },
          "import": { "type": "string" },
          "block_start": { "type": "string" },
          "block_end": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
