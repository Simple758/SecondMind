<manifest package="com.secondmind.minimal"
    xmlns:android="http://schemas.android.com/apk/res/android">
  <application>
    <!-- Second launcher icon that opens the SAME baseline screen for now -->
    <activity-alias
      android:name=".dev.PatchLauncher"
      android:targetActivity=".MainActivity"
      android:exported="true"
      android:label="SecondMind (Patch)">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>

    <!-- Debug-only Notification Listener (safe alongside your main one) -->
    <service
      android:name=".dev.DebugNotificationListener"
      android:exported="true"
      android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
      <intent-filter>
        <action android:name="android.service.notification.NotificationListenerService" />
      </intent-filter>
    </service>
  </application>
</manifest>
